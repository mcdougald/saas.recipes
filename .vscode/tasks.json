{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Next.js: dev",
      "type": "shell",
      "command": "pnpm --filter web dev",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {}
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true
      },
      "problemMatcher": []
    },
    {
      "label": "Next.js: build",
      "type": "shell",
      "command": "pnpm --filter web build",
      "options": { "cwd": "${workspaceFolder}" },
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$tsc"]
    }
  ]
}
